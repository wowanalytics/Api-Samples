<?xml version="1.0" encoding="UTF-8"?>

<!-- This file contains job definitions in schema version 2.0 format -->

<job-scheduling-data xmlns="http://quartznet.sourceforge.net/JobSchedulingData" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0">

  <processing-directives>
    <overwrite-existing-data>true</overwrite-existing-data>
  </processing-directives>

  <schedule>

    <job>
        <name>SalesForceJob</name>
        <group>SalesForce</group>
        <description>SalesForceJob</description>
        <job-type>SalesForceCrm.SalesForceJob, SalesForceCrm</job-type>
        <durable>true</durable>
        <recover>false</recover>
    </job>

    <trigger>
      <cron>
        <name>SalesForce</name>
        <group>SalesForce</group>
        <description>Checked WOW for new leads and adds them to SalesForce</description>
        <job-name>SalesForceJob</job-name>
        <job-group>SalesForce</job-group>
        <priority>10</priority>
        <!--
        1. Seconds
        2. Minutes
        3. Hours
        4. Day-of-Month
        5. Month
        6. Day-of-Week
        7. Year (optional field)
        -->
        <!--<cron-expression>0 0/5 * * * ?</cron-expression>-->
        <cron-expression>0 0 0/1 * * ?</cron-expression> <!-- Checks every 30 minutes -->
      </cron>
    </trigger>
  </schedule>
</job-scheduling-data>